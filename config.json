{
    "model_type": "darknet",
    "model_cfg": "cfg/model_cfg/yolov3-voc.cfg",
    "pretrained_weight": "checkpoints/backup/log-2020-04-20T22-04-23/weights/yolov3_49.pth",
    "image_size": 416,

    "optimizer": "SGD",
    "lr": 1e-4,
    "weight_decay": 0,
    "gradient_accumulation": 2,

    "loss_type":
    {
        "yolo_loss":
            {
                "object_scale": 1,
                "noobject_scale": 100,
                "ignore_thresh": 0.5
            }
    },
    "loss_weights": [1.0],

    "lr_scheduler_type": "StepLR",
    "step_size": 50,
    "restart_step": null,
    "multi_step": null,

    "dataset": "official",
    "train_images_root": "data/voc/train",
    "train_annotations_root": "data/voc/train_txt",
    "val_images_root": "data/voc/test",
    "val_annotations_root": "data/voc/test_txt",
    "official": false,

    "mean": [0.485, 0.456, 0.406],
    "std": [0.229, 0.224, 0.225],
    "normalize": false,
    "dataset_format": "coco",
    "train_augmentation": 
    {
        "Resize": 
        {
            "height": 416, 
            "width":416, 
            "always_apply": true
        }
    },
    "val_augmentation":
    {
        "Resize": 
        {
            "height": 416, 
            "width": 416, 
            "always_apply": true
        }
    },

    "batch_size": 8,
    "start_epoch": 50,
    "epoch": 120,
    "log_iteration": 10,
    "save_weight_interval": 10,
    "val_interval": 1,

    "iou_thres": 0.5,
    "conf_thres": 0.5,
    "nms_thres": 0.5,

    "log_path": "checkpoints/backup"
}
