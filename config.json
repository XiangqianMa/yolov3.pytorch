{
    "model_type": "darknet",
    "model_cfg": "cfg/model_cfg/yolov3.cfg",
    "pretrained_weight": "checkpoints/official_weights/darknet53.conv.74",
    "image_size": [416, 416],

    "optimizer": "Adam",
    "lr": 1e-3,
    "weight_decay": 1e-4,

    "loss_type":
    {
        "yolo_loss":
            {
                "object_scale": 1,
                "noobject_scale": 100,
                "ignore_thresh": 0.5
            }
    },
    "loss_weights": [1.0],

    "lr_scheduler_type": "StepLR",
    "step_size": 50,
    "restart_step": null,
    "multi_step": null,
    
    "train_images_root": "data/coco/val2017",
    "train_annotations_root": "data/coco/val2017_txt",
    "val_images_root": "data/coco/val2017",
    "val_annotations_root": "data/coco/val2017_txt",
    "mean": [0.485, 0.456, 0.406],
    "std": [0.229, 0.224, 0.225],
    "dataset_format": "coco",
    "train_augmentation": 
    {
        "Resize": 
        {
            "height": 416, 
            "width":416, 
            "always_apply": true
        }
    },
    "val_augmentation":
    {
        "Resize": 
        {
            "height": 416, 
            "width": 416, 
            "always_apply": true
        }
    },
    "batch_size": 8,

    "epoch": 100,
    "log_iteration": 10,
    "save_epoch": 10
}
