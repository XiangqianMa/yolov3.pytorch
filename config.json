{
    "model_type": "darknet",
    "model_cfg": "cfg/model_cfg/yolov3-voc.cfg",
    "pretrained_weight": "checkpoints/official_weights/yolov3.weights",
    "image_size": 416,

    "optimizer": "Adam",
    "lr": 1e-3,
    "weight_decay": 0,
    "gradient_accumulation": 2,

    "batch_size": 8,
    "start_epoch": 0,
    "epoch": 130,

    "lr_scheduler_type": "StepLR",
    "step_size": 50,
    "restart_step": null,
    "multi_step": [90, 105],

    "log_iteration": 10,
    "save_weight_interval": 10,
    "val_interval": 1,

    "dataset": "coco",
    "train_images_root": "data/voc/train",
    "train_annotations_root": "data/voc/train_txt",
    "val_images_root": "data/voc/test",
    "val_annotations_root": "data/voc/test_txt",
    "official": false,

    "mean": [0.485, 0.456, 0.406],
    "std": [0.229, 0.224, 0.225],
    "normalize": false,
    "multi_scale": true,
    "dataset_format": "coco",
    "train_augmentation": null,
    "val_augmentation": null,

    "loss_type":
    {
        "yolo_loss":
            {
                "object_scale": 1.0,
                "noobject_scale": 100.0,
                "ignore_thresh": 0.7
            }
    },
    "loss_weights": [1.0],

    "iou_thres": 0.3,
    "conf_thres": 0.25,
    "nms_thres": 0.6,

    "log_path": "checkpoints/backup"
}
