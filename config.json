{
    "model_type": "darknet",
    "model_cfg": "cfg/model_cfg/yolov3-hand.cfg",
    "pretrained_weight": "checkpoints/official_weights/darknet53.conv.74",
    "image_size": 416,

    "optimizer": "SGD",
    "lr": 1e-3,
    "weight_decay": 0,
    "gradient_accumulation": 2,

    "loss_type":
    {
        "yolo_loss":
            {
                "object_scale": 1,
                "noobject_scale": 100,
                "ignore_thresh": 0.5
            }
    },
    "loss_weights": [1.0],

    "lr_scheduler_type": "StepLR",
    "step_size": 50,
    "restart_step": null,
    "multi_step": null,

    "dataset": "oxfordhand",
    "train_images_root": "/mnt/program/YOLOv3-model-pruning/data/images/train",
    "train_annotations_root": "/mnt/program/YOLOv3-model-pruning/data/labels/train",
    "val_images_root": "/mnt/program/YOLOv3-model-pruning/data/images/validation",
    "val_annotations_root": "/mnt/program/YOLOv3-model-pruning/data/labels/validation",
    "official": false,

    "mean": [0.485, 0.456, 0.406],
    "std": [0.229, 0.224, 0.225],
    "dataset_format": "coco",
    "train_augmentation": 
    {
        "Resize": 
        {
            "height": 416, 
            "width":416, 
            "always_apply": true
        }
    },
    "val_augmentation":
    {
        "Resize": 
        {
            "height": 416, 
            "width": 416, 
            "always_apply": true
        }
    },

    "batch_size": 8,
    "epoch": 160,
    "log_iteration": 10,
    "save_weight_interval": 10,
    "val_interval": 1,

    "iou_thres": 0.5,
    "conf_thres": 0.5,
    "nms_thres": 0.5,

    "log_path": "checkpoints/backup"
}
