{
    "model_type": "darknet",
    "model_cfg": "cfg/model_cfg/yolov3-hand.cfg",
    "pretrained_weight": "checkpoints/official_weights/yolov3.weights",
    "image_size": 416,

    "optimizer": "Adam",
    "lr": 1e-3,
    "weight_decay": 0,
    "gradient_accumulation": null,

    "batch_size": 6,
    "start_epoch": 0,
    "epoch": 110,

    "lr_scheduler_type": "CosineLR",
    "step_size": 60,
    "restart_step": 120,
    "multi_step": [60, 80],

    "log_iteration": 10,
    "save_weight_interval": 10,
    "val_interval": 5,
    "val_after": 0,

    "dataset": "coco",
    "train_images_root": "data/hand/trainval",
    "train_annotations_root": "data/hand/trainval_txt",
    "val_images_root": "data/hand/test",
    "val_annotations_root": "data/hand/test_txt",
    "official": false,

    "mean": [0.485, 0.456, 0.406],
    "std": [0.229, 0.224, 0.225],
    "normalize": false,
    "multi_scale": true,
    "mosaic": false,
    "dataset_format": "coco",
    "train_augmentation": null,
    "val_augmentation": null,

    "loss_type":
    {
        "yolo_loss":
            {
                "object_scale": 1.0,
                "noobject_scale": 100.0,
                "ignore_thresh": 0.5,
                "bbox_loss": "GIoU",
                "iou_type": "iou"
            }
    },
    "loss_weights": [1.0],

    "iou_thres": 0.5,
    "conf_thres": 0.01,
    "nms_thres": 0.5,
    "test_iou_type": "iou",

    "log_path": "checkpoints/backup",

    "sparsity_train": true,
    "sparse_scale_rate": 1e-3
}
